@model IEnumerable<MVC5OnlineTicariOtamasyon.Models.Siniflar.GrupSinif3>


<div class="card">
    <div class="card-header">
        <h3 class="card-title">Ürün Marka Verileri</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Marka</th>
                    <th>İlerleme</th>
                    <th style="width: 40px">Toplam</th>
                </tr>
            </thead>
            <tbody>
                @{ int sirano = 0;}
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@{sirano++;} @sirano</td>
                        <td>@x.Marka</td>
                        <td>
                            @if (x.Sayi == 1 || x.Sayi<=5)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                                </div>
                            }
                            @if (x.Sayi >=4 && x.Sayi <= 9)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 70%"></div>
                                </div>
                            }

                            @if (x.Sayi >= 10 && x.Sayi <= 15)
                            {
                                <div class="progress progress-xs progress-striped active">
                                    <div class="progress-bar bg-success" style="width: 90%"></div>
                                </div>
                            }

                            @if (x.Sayi >= 16 && x.Sayi <= 20)
                            {
                                <div class="progress progress-xs progress-striped active">
                                    <div class="progress-bar bg-info" style="width: 90%"></div>
                                </div>
                            }
                            @if (x.Sayi >= 21 && x.Sayi <= 25)
                            {
                                <div class="progress progress-xs progress-striped active">
                                    <div class="progress-bar bg-gradient-fuchsia" style="width: 90%"></div>
                                </div>
                            }
                        </td>
                        <td>
                            @if (x.Sayi == 1 || x.Sayi <= 5)
                            {
                                <span class="badge bg-danger">
                                    @x.Sayi 
                                </span>
                            }

                            @if (x.Sayi >= 4 && x.Sayi <= 9)
                            {
                                <span class="badge bg-warning">
                                    @x.Sayi 
                                </span>
                            }

                            @if (x.Sayi >= 10 && x.Sayi <= 15)
                            {
                                <span class="badge bg-success">
                                    @x.Sayi 
                                </span>
                            }
                            @if (x.Sayi >= 16 && x.Sayi <= 20)
                            {
                                <span class="badge bg-info">
                                    @x.Sayi 
                                </span>
                            }
                            @if (x.Sayi >= 21 && x.Sayi <= 25)
                            {
                                <span class="badge bg-gray-dark">
                                    @x.Sayi 
                                </span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
