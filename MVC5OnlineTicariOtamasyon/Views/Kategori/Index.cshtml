@using MVC5OnlineTicariOtamasyon.Models.Siniflar
@model List<Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div style="margin: 10px 10px 10px 10px">
    <table class="table table-bordered">
      
            <tr>
                <th>ID:</th>
                <th>Kategori Adı:</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.KategoriID</td>
                <td>@x.KategoriAd</td>
                <td><a href="/Kategori/KategoriSil/@x.KategoriID" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/Kategori/KategoriGetir/@x.KategoriID" class="btn btn-outline-warning">Güncelle</a></td>
            </tr>
        }
    </table>
</div>
<div>
    <a href="/Kategori/KategoriEkle" class="btn btn-outline-success" style="margin-left:10px;">Kategori Ekle</a>
</div>


