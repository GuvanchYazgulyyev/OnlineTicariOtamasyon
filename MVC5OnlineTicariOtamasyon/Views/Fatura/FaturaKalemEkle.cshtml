@model MVC5OnlineTicariOtamasyon.Models.Siniflar.FaturaKalem
@{
    ViewBag.Title = "FaturaKalemEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="margin:10px 10px 10px 10px;">
    <h4>Yeni Kalem Sayfası</h4>
    <form class="form-group" method="post">
        <br />
        Açıklama
        @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" })
        <br />
        Miktar
        @Html.TextBoxFor(x => x.Miktar, new { @class = "form-control" })

        <br />
        Birim Fiyat
        @Html.TextBoxFor(x => x.BirimFiyat, new { @class = "form-control" })
        <br />
        Toplam
        @Html.TextBoxFor(x => x.Tutar, new { @class = "form-control" })
        <br />
        Fatura
        @Html.TextBoxFor(x => x.Faturaid, new { @class = "form-control" })
        @Html.HiddenFor(x => x.FaturaKalemID)
        <br />
        <button class="btn btn-primary">Kaydet</button>

    </form>
</div>





