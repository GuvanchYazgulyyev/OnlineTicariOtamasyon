@using MVC5OnlineTicariOtamasyon.Models.Siniflar
@model List<Fatura>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div style="margin: 10px 10px 10px 10px">
    <table id="tbl1" class="table table-bordered">
        <thead>
            <tr>
                <th>ID:</th>
                <th>Seri No:</th>
                <th>Sıra No:</th>
                <th>Vergi Dairesi:</th>
                <th>Tarih:</th>
                <th>Saat:</th>
                <th>Teslim Eden:</th>
                <th>Teslim Alan:</th>
                <th>Toplam:</th>
                <th>Güncelle</th>
                <th>Detaylar</th>
            </tr>
        </thead>
        @foreach (var x in Model)
        {
    <tr>
        <td>@x.FaturaID</td>
        <td>@x.FaturaSeriNo</td>
        <td>@x.FaturaSiraNo</td>
        <td>@x.VergiDairesi</td>
        <td>@x.Tarih</td>
        <td>@x.Saat</td>
        <td>@x.TeslimEden</td>
        <td>@x.TeslimAlan</td>
        <td>@x.Toplam</td>
        <td><a href="/Fatura/FaturaGetir/@x.FaturaID" class="btn btn-outline-warning">Güncelle</a></td>
        <td><a href="/Fatura/FaturaDetay/@x.FaturaID" class="btn btn-outline-secondary">Detaylar</a></td>
    </tr>
        }
    </table>
</div>
<div>
    <a href="/Fatura/FaturaEkle" class="btn btn-outline-success" style="margin-left:10px;">Yeni Fatura Ekle</a>
</div>

<link href="~/Content/bootstrap.css" rel="stylesheet" />

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>




<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({});
</script>





