@using MVC5OnlineTicariOtamasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div style="margin: 10px 10px 10px 10px">
    <table id="tbl1" class="table table-bordered">
        <thead>
            <tr>
                <th>Ürün:</th>
                <th>Müşteri:</th>
                <th>Personel:</th>
                <th>Adet:</th>
                <th>Fiyat</th>
                <th>Toplam</th>
                <th>Tarih</th>
                <th>Güncelle</th>
                <th>Detaylar</th>
            </tr>
        </thead>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Urun.UrunAd</td>
                <td>@x.Cari.CariAd @x.Cari.CariSoyad</td>
                <td>@x.Personel.PersonelAd @x.Personel.PersonelSoyad</td>
                <td>@x.Adet</td>
                <td>@x.Fiyat</td>
                <td>@x.Toplam</td>
                <td>@Convert.ToDateTime(x.Tarih).ToString("dd/MM/yyyy")</td>
                <td><a href="/Satislar/SatisGetir/@x.SatisID" class="btn btn-outline-warning">Güncelle</a></td>
                <td><a href="/Satislar/SatisDetay/@x.SatisID" class="btn btn-outline-secondary">Detaylar</a></td>
            </tr>
        }
    </table>
</div>
<div>
    <a href="/Satislar/SatisEkle" class="btn btn-outline-success" style="margin-left:10px;">Yeni Satış Yap</a>
</div>

<link href="~/Content/bootstrap.css" rel="stylesheet" />

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>




<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({});
</script>




